<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="prasadkathale.leaveapp.activities.LoginPage"
    android:background="#16a085"
    android:id='@+id/nl_lp_nestedLoop'
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top|center">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/holiday_logo"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_lp_displayname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_lp_displayname"
                android:hint="Display name"
                android:drawableStart="@drawable/ic_account_box_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="#000000"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_lp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_lp_email"
                android:hint="Email ID"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="#000000"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_lp_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_lp_password"
                android:hint="Password"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="#000000"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_lp_signin"
            android:text="@string/Signin"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:textColorHint="#000000"
            android:layout_gravity="center"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_lp_signup"
            android:layout_width="175dp"
            android:text="@string/Signup_NewUser"
            android:layout_gravity="top|left"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:layout_marginTop="40dp"
            android:background="#00000000"/>

    </android.support.v7.widget.LinearLayoutCompat>



</android.support.v4.widget.NestedScrollView>
